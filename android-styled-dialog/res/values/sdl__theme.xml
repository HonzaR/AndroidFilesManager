<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="SDL"/>

    <style name="SDL.DialogBase" parent="android:Theme.Light"/>

	<style name="SDL.Dialog" parent="SDL.DialogBase">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@drawable/dialog_bg</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowActionModeOverlay">true</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:backgroundDimAmount">0.6</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
	</style>

    <style name="SDL.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dialog_title_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">@dimen/sdl__text_hor_padding</item>
        <item name="android:paddingRight">@dimen/sdl__text_hor_padding</item>
        <item name="android:paddingTop">@dimen/sdl__title_top_padding</item>
        <item name="android:paddingBottom">@dimen/sdl__title_bottom_padding</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
</resources>
